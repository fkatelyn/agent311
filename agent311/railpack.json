{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "18"
  },
  "buildAptPackages": ["gcc", "postgresql-client"],
  "steps": {
    "install-cli": {
      "inputs": [{ "step": "install" }],
      "commands": ["npm install -g @anthropic-ai/claude-code"]
    }
  },
  "deploy": {
    "aptPackages": ["curl"],
    "startCommand": "bash start.sh"
  }
}
